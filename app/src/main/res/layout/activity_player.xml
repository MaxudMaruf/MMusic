<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout1"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/back5"


    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.masud.mmusic.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="370dp"
            android:layout_height="31dp"
            android:layout_above="@+id/btPlay"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:background="@color/White"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="405dp" />

        <ImageButton
            android:id="@+id/btPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/btNxt"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/ic_media_pause"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/btFb"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/seekBar"
            android:layout_below="@+id/seekBar"
            android:background="@android:drawable/ic_media_previous"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/btFf"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="22dp"
            android:background="@android:drawable/ic_media_next"

            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/btPv"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/btPlay"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/btPlay"
            android:background="@android:drawable/ic_media_rew"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/btNxt"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/btFf"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/btPlay"
            android:background="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="447dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:srcCompat="@android:drawable/ic_lock_silent_mode"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/btPv"
            android:layout_marginEnd="42dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toStartOf="@+id/btNxt"
            android:layout_marginEnd="18dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignEnd="@+id/btNxt" />

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>
